<view class="page">
  <view class="weui-panel">

        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell" >
                <view class="weui-cell__bd" style=" width: 60px">评分</view>

                <view class="weui-cell__hd"   style=" width: 150px; ">
                  <image src="{{star_1}}"  style="width: 30px;height: 30px" bindtap="btn_score" id = "1"/>
                  <image src="{{star_2}}"  style="width: 30px;height: 30px" bindtap="btn_score" id = "2"/>
                  <image src="{{star_3}}"  style="width: 30px;height: 30px" bindtap="btn_score" id = "3"/>
                  <image src="{{star_4}}"  style="width: 30px;height: 30px" bindtap="btn_score" id = "4"/>
                  <image src="{{star_5}}"  style="width: 30px;height: 30px" bindtap="btn_score" id = "5"/>
                </view>

                <view class="weui-cell__ft " style="font-size: 0 ; width: 100px">
                    <view style="display: inline-block;vertical-align:middle; font-size: 17px;">{{m_score}}</view>
                </view>
            </view>
        </view>
  </view>

  <view class="weui-panel" hidden="{{m_isHiddenBtnOK}}">
        <button class="weui-btn" bindtap= "btn_ok" type = "primary">提交</button>
  </view>
</view>